{# HTML resume template with embedded CSS #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ personal.name }} - Resume</title>
  <style>
{{ css }}
  </style>
</head>
<body>

<h1>{{ personal.name }}</h1>

<p>
  {{ personal.address.street }}<br>
  {{ personal.address.city }}, {{ personal.address.state }} {{ personal.address.zip }}<br>
  {{ personal.phone }}<br>
  <a href="mailto:{{ personal.email }}">{{ personal.email }}</a><br>
  <a href="{{ personal.website }}">{{ personal.website }}</a>
</p>

<h2>Summary</h2>

<p>{{ summary }}</p>

<ul>
{% for highlight in highlights %}
  <li><strong>{{ highlight.label }}:</strong> {{ highlight.description | trim }}</li>
{% endfor %}
</ul>

<h2>Skills</h2>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Technologies &amp; Expertise</th>
    </tr>
  </thead>
  <tbody>
{% for skill in skills %}
    <tr>
      <td><strong>{{ skill.domain }}</strong></td>
      <td>{{ skill.technologies | join(', ') }}</td>
    </tr>
{% endfor %}
  </tbody>
</table>

<h2>Education</h2>

{% for edu in education %}
<p>
  {{ edu.degree }} in {{ edu.field }}<br>
  <em>{{ edu.institution }}, {{ edu.end }}</em>
</p>
{% endfor %}

</body>
</html>
